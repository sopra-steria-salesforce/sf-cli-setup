{
  "name": "sf-cli-setup",
  "description": "Setup sf cli in GitHub Actions",
  "version": "0.8.9",
  "type": "module",
  "author": "sopra-steria-salesforce",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sopra-steria-salesforce/sf-cli-setup.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "salesforce",
    "sfdx"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'hook copied' && cp .env.example .env",
    "bundle": "npm run format:write && npm run package",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "local-action:post": "npx @github/local-action . src/cache/save.ts .env",
    "package": "ncc build src/index.ts --license licenses.txt --minify && ncc build src/cache/save.ts --out dist/cache-save --minify",
    "all": "npm run format:write && npm run lint && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^4.0.3",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@github/local-action": "^3.2.1",
    "@types/node": "^20.*.*",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "@vercel/ncc": "^0.38.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "typescript": "^5.8.3"
  }
}
