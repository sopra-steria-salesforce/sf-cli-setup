{
  "name": "sf-cli-setup",
  "description": "Setup sf cli in GitHub Actions",
  "version": "0.7.1",
  "author": "sopra-steria-salesforce",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sopra-steria-salesforce/sf-cli-setup.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "salesforce",
    "sfdx"
  ],
  "exports": {
    ".": "./dist/main.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'hook copied'",
    "bundle": "npm run format:write && npm run package",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/main.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.0.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@salesforce/cli": "^2.34.7",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-prettier": "^5.1.3",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.3.3"
  }
}
